        // Animation for features
        // Scroll Control Variables
let featuresScrollPaused = false;
let testimonialsScrollPaused = false;

// Function to add scroll control to a container
function addScrollControl(container) {
    container.addEventListener('mouseenter', () => {
        featuresScrollPaused = true;
    });

    container.addEventListener('mouseleave', () => {
        featuresScrollPaused = false;
    });
}

function isInViewport(element) {
    const rect = element.getBoundingClientRect();
    return (
        rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
        rect.bottom >= 0
    );
}

// Function to animate features horizontally
function animateFeatures() {
    const features = document.querySelectorAll('.feature');
    features.forEach((feature, index) => {
        if (isInViewport(feature)) {
            feature.style.animation = `slideInFromRight 0.5s ease forwards`;
            feature.style.animationDelay = `${index * 0.2}s`;
        }
    });
}

// Function to animate testimonials horizontally
function animateTestimonials() {
    const testimonials = document.querySelectorAll('.testimonial');
    testimonials.forEach((testimonial, index) => {
        if (isInViewport(testimonial)) {
            testimonial.style.animation = `slideInFromRight 0.5s ease forwards`;
            testimonial.style.animationDelay = `${index * 0.2}s`;
        }
    });
}

// Run animations on scroll
window.addEventListener('scroll', () => {
    animateFeatures();
    animateTestimonials();
});

// Run animations on load
window.addEventListener('load', () => {
    setTimeout(() => {
        animateFeatures();
        animateTestimonials();
    }, 500);
});

// Automatic horizontal scrolling for features
const featuresContainer = document.querySelector('.features-container');
let featuresScrollPosition = 0;
let featuresScrollDirection = 1;

function autoScrollFeatures() {
    if (!isInViewport(featuresContainer) || featuresScrollPaused) return;
    
    const maxScroll = featuresContainer.scrollWidth - featuresContainer.clientWidth;
    
    if (featuresScrollPosition >= maxScroll) {
        featuresScrollDirection = -1;
    } else if (featuresScrollPosition <= 0) {
        featuresScrollDirection = 1;
    }
    
    featuresScrollPosition += featuresScrollDirection * 0.3;
    featuresContainer.scrollLeft = featuresScrollPosition;
    
    requestAnimationFrame(autoScrollFeatures);
}

// Automatic horizontal scrolling for testimonials
const testimonialsContainer = document.querySelector('.testimonials-container');
let testimonialsScrollPosition = 0;
let testimonialsScrollDirection = 1;

function autoScrollTestimonials() {
    if (!isInViewport(testimonialsContainer) || testimonialsScrollPaused) return;
    
    const maxScroll = testimonialsContainer.scrollWidth - testimonialsContainer.clientWidth;
    
    if (testimonialsScrollPosition >= maxScroll) {
        testimonialsScrollDirection = -1;
    } else if (testimonialsScrollPosition <= 0) {
        testimonialsScrollDirection = 1;
    }
    
    testimonialsScrollPosition += testimonialsScrollDirection * 0.3;
    testimonialsContainer.scrollLeft = testimonialsScrollPosition;
    
    requestAnimationFrame(autoScrollTestimonials);
}

// Start automatic scrolling when in viewport
window.addEventListener('scroll', () => {
    if (isInViewport(featuresContainer)) {
        requestAnimationFrame(autoScrollFeatures);
    }
    if (isInViewport(testimonialsContainer)) {
        requestAnimationFrame(autoScrollTestimonials);
    }
});

// Add scroll control to containers
const featuresSection = document.querySelector('.features');
const testimonialsSection = document.querySelector('.testimonials');

addScrollControl(featuresContainer);
addScrollControl(testimonialsContainer);
    </script>
